**
* Memory mapped addresses
*
vdpwd:                                 ; VDP write data
       equ  >8c00
vdpwa:                                 ; VDP set read/write address
       equ  >8c02
vdprd:                                 ; VDP read data
       equ  >8800
vdpsta:                                ; VDP status
       equ  >8802
sound1:                                 ; Sound
       equ  >8400
spchwt:
       equ  >9400
spchrd:
       equ  >9000
rndsd:
       equ  >83c0                      ; Random number seed
kscan:
       equ  >02b2

**
* Scratch pad
*
ti_wrksp:
       equ  >8300
sndws:
       equ  ti_wrksp
ti_r0lb:
       equ  ti_wrksp+1
ti_r1lb:
       equ  ti_wrksp+3
wrksp:
       equ  ti_wrksp+>1A               ; tmp0-tmp2 overlaps ti_wrksp r13-r15
r0lb:
       equ  wrksp+1
r1lb:
       equ  wrksp+3
bits:
       equ  wrksp+>20
stack:
       equ  bits+8
b255:
       equ  stack+>30
b254:
       equ  b255+1
frame:
       equ  b254+1
rnd_seed:
       equ  frame+2
vdp_status:
       equ  rnd_seed+2
pad_max:
       equ  vdp_status+2
kscan_device:
       equ  >8374
kscan_key:
       equ  >8375
kscan_status:
       equ  >837c
gplws:
       equ  >83e0


